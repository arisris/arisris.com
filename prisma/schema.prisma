generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  image     String
  role      Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts     Post[]
  guestbook Guestbook[]
  @@map("user")
}

model Guestbook {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  body      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId Int
  @@map("guestbook")
}

model Post {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  title     String
  body      String?
  status    Int      @default(0)
  category  Category @relation(fields: [categoryId], references: [id])
  tags      Tags[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId     Int
  categoryId Int
  @@map("post")
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String
  detail String?
  posts  Post[]

  @@map("category")
}

model Tags {
  id    Int    @id @default(autoincrement())
  name  String
  posts Post[]

  @@map("tags")
}

model PageView {
  slug  String @id
  count Int    @default(1)

  @@map("page_view")
}
