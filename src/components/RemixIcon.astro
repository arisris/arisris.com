---
import { icons } from "@iconify-json/ri/icons.json";

type Props = {
  name: keyof typeof icons;
  width?: number | string;
  height?: number | string;
  className?: string;
};
export type RemixIconName = Props["name"];

const { name, width = 24, height = 24, className } = Astro.props;
---

<svg
  viewBox={`0 0 ${height} ${width}`}
  height={height}
  width={width}
  class={className}
  xmlns="http://www.w3.org/2000/svg"
  set:html={icons[name].body}
/>
